<Window x:Class="JsonGenomix.FileDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonGenomix"
        mc:Ignorable="d"
        Title="FileDisplay" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="File Path"/><Run Text=" :"/></TextBlock>
        <TextBlock Name="LblName" Margin="100,39,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Name="Content" HorizontalAlignment="Left" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="337" Width="772" ScrollViewer.VerticalScrollBarVisibility="Visible" />
    </Grid>
</Window>
